<div class="container" style = "margin-top: 30px;">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <h3 class = "mb-5 text-center">会員詳細</h3>
      <table class="table table-hover teble-inverse mb-5">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @user.is_deleted ? "退会" : "有効" %></td>
          </tr>
          <tr>
            <td>作成日時</td>
          <td><%= @user.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      
      
      
    <div class="col-lg-2"></div>
  </div>
</div>