<div class="container" style = "margin-top: 30px;">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
      <h3 class = "mb-5 text-center">コメント詳細</h3>
      <table class="table table-hover teble-inverse mb-5">
        <tbody>
          <tr>
            <td>コメントID</td>
            <td><%= @post_comment.id %></td>
          </tr>
          <tr>
            <td>コメント日時</td>
            <td><%= @post_comment.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>コメント</td>
          <td><%= @post_comment.comment %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @post_comment.user.name %></td>
          </tr>
          <tr>
            <td>ユーザーID</td>
            <td><%= @post_comment.user.id %></td>
          </tr>
        </tbody>
      </table>
       <%= link_to "削除", admins_post_comment_path(@post_comment), method: :delete, class: "btn btn-lg btn-danger rounded-pill" %>
      <div class="col-lg-1"></div>
    </div>
  </div>
</div>