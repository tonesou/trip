<div class="container" style = "margin-top: 200px;">
  <div class="row">
    <div class="col-lg-3"></div>
      <div class="col-lg-9">

        <h2>プロフィール編集</h2><br>
        <%= form_with model: @user do |f| %>
          <h4>
            <div class= "edit" style = "margin-top: 25px;" >
              <label for="inputName">Name</label>
                <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
            </div>
            <div class= "mypage" style = "margin-top: 25px;" >
              <label for="inputImage">ProfileImage</label>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
            </div>
            <div class= "mypage" style = "margin-top: 25px;" >
              <label for="inputImage">Email</label>
              <%= f.text_field :email %><br>
            </div>
            <div class= "mypage" style = "margin-top: 25px;" >
              <%= f.submit "変更を保存", class: "btn btn-lg  btn btn-outline-success mt-5 " %>
              <%= link_to "戻る", user_path(current_user.id), class: "btn btn-lg  btn btn-outline-primary mt-5" %>
          </h4>
            </div>
          <% end %>
      </div>
  </div>
</div>